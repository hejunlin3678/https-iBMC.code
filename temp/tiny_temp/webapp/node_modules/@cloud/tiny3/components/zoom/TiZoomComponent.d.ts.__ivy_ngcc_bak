import { ElementRef, OnDestroy, OnInit, Renderer2 } from '@angular/core';
import { TiRenderer } from '../../services/renderer/TiRenderer';
/**
 * @ignore
 *
 * 10.0.3版本增加，暂时不对外开放
 *
 * 该指令可以实现图片放大镜功能，添加tiZoom后会创建放大区域选择器元素（div）和放大结果呈现元素（div）
 *
 * 通过设置放大结果的background-image、background-size和background-position来达到放大效果
 *
 * 10.1.0版本从指令调整为组件形式
 *
 * <example-url>../tiny3demo/#/zoom/zoom-all</example-url>
 */
export declare class TiZoomComponent implements OnInit, OnDestroy {
    private renderer;
    private tiRenderer;
    private static readonly ZOOM_VIEWER_BORDER_WIDTH;
    zoomSelectorLength: number;
    zoomViewerLength: number;
    private ratio;
    private hostEle;
    private parentEle;
    private imgSrc;
    private zoomSelectorEle;
    private zoomViewerEle;
    private selectorMouseMoveHandler;
    private selectorMouseLeaveHandler;
    constructor(hostRef: ElementRef, renderer: Renderer2, tiRenderer: TiRenderer);
    ngOnInit(): void;
    /**
     * @ignore
     * 图片加载成功事件处理
     */
    onHostLoad(event: any): void;
    /**
     * @ignore
     * 鼠标进入宿主元素，创建放大效果相关元素
     */
    onHostMouseEnter(event: any): void;
    /**
     * @ignore
     * 鼠标离开宿主元素，移除放大效果相关元素
     */
    onHostMouseLeave(event: any): void;
    /**
     * 设置父元素
     */
    private setParentEle;
    /**
     * 创建选择遮罩，初始化样式，增加事件监听
     */
    private createZoomSelector;
    /**
     * 创建放大结果呈现元素，初始化样式
     */
    private createZoomViewer;
    private getCursorPos;
    /**
     * 计算选择遮罩偏移和放大区域
     */
    private reStyleResults;
    ngOnDestroy(): void;
    /**
     * 移除选择遮罩和放大结果元素、解绑相关事件
     */
    private removeZoomEle;
}
