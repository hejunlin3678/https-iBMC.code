import { AfterViewInit, ElementRef, Renderer2 } from '@angular/core';
import { TiRenderer } from '../../services/renderer/TiRenderer';
import { TiPositionType } from '../../utils/Position';
/**
 * TiCellText 表格单元格中放置文本的容器组件
 *
 * 提供文本溢出时出省略号...,且hover时出tip的功能。
 *
 * 配合TiCellText组件使用可使表格单元格中内容显示不下时，文本出省略号...,
 * 而文本后的放在TiCellIcons图标始终可以显示出来
 *
 */
export declare class TiCellTextComponent implements AfterViewInit {
    private renderer;
    private elementRef;
    private tiRenderer;
    /**
     * 设置文本超长显示时Tip内容项
     */
    tipContent: string;
    /**
     * 设置文本超长显示时Tip位置
     */
    tipPosition: TiPositionType;
    private cellTextEle;
    constructor(renderer: Renderer2, elementRef: ElementRef, tiRenderer: TiRenderer);
    ngAfterViewInit(): void;
    private setMaxWidth;
}
