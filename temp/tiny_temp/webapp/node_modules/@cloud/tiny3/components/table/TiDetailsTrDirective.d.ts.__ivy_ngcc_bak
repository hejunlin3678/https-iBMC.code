import { DoCheck, Renderer2, TemplateRef, ViewContainerRef } from '@angular/core';
import { TiTableComponent, TiTableRowData } from './TiTableComponent';
/**
 * TiDetailsTr 详情行结构指令
 *
 * 使用时需要在其前面加 * 语法糖，传入当前行数据；
 * 其内部根据row.showDetails的值来控制详情行是否显示，功能类似于ngIf。
 */
export declare class TiDetailsTrDirective implements DoCheck {
    private templateRef;
    private viewContainerRef;
    private renderer;
    private table;
    /**
     * 当前行数据
     */
    row: TiTableRowData;
    private oldShowDetails;
    constructor(templateRef: TemplateRef<any>, viewContainerRef: ViewContainerRef, renderer: Renderer2, table: TiTableComponent);
    ngDoCheck(): void;
    private updateView;
}
