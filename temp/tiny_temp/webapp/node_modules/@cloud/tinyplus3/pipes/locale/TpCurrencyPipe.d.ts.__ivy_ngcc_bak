import { PipeTransform } from '@angular/core';
import { TpNumberPipe } from './TpNumberPipe';
/**
 * 货币格式化
 *
 * 默认按照局点配置格式
 *
 * <example-url>../tinyplus3demo/#/locale/locale-all</example-url>
 */
export declare class TpCurrencyPipe extends TpNumberPipe implements PipeTransform {
    /**
     * 转换
     * @param value 货币数字
     * @param format 自定义保留位数，例如：1.2-4，表示整数部分最少保留1位，小数部分最小保留2位，小数部分最大保留4位。
     * @param type 'short'表示美元末尾不带USD
     * @returns 转换结果
     */
    transform(value: number, format?: string, type?: 'short' | undefined): string;
    /**
     * 获取局点中的配置
     * @returns options
     */
    protected getOptions(): any;
}
