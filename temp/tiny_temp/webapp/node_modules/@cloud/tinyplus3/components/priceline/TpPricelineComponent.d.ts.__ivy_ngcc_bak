import { ElementRef, Renderer2, SimpleChanges } from '@angular/core';
import { TiButtongroupComponent, TiButtonItem, TiFormComponent } from '@cloud/tiny3';
/**
 * @ignore
 * 内部使用
 */
export interface TpPricelineRect {
    x: number;
    y: number;
    width: number;
    height: number;
    active: boolean;
    text: string;
    /**
     * 允许有多余的属性字段
     */
    [propName: string]: any;
}
/**
 * 价格曲线每个按钮选项数据
 */
export interface TpPricelineItem extends TiButtonItem {
    /**
     * 每个选项对应的价格
     */
    price: number;
}
/**
 *  价格曲线组件, 对应tiny2中btnSlider组件price-option接口配置后的功能
 *
 *  9.0.4版本新增
 *
 * <example-url>../tinyplus3demo/#/priceline/priceline-all</example-url>
 */
export declare class TpPricelineComponent extends TiFormComponent {
    /**
     * 按钮配置数据
     */
    items: Array<TpPricelineItem>;
    /**
     * 设置单选按钮组是否可以取消选中
     */
    deselectable: boolean;
    /**
     * @ignore
     * canvas 元素引用
     */
    canvasRef: ElementRef;
    /**
     * @ignore
     * canvas 包裹元素，
     */
    canvasWrapRef: ElementRef;
    /**
     * @ignore
     * 按钮组
     */
    buttonGroupCom: TiButtongroupComponent;
    private ctx;
    private canvasOption;
    private canvasWidth;
    private step;
    private previousItems;
    private rects;
    private x;
    private y;
    private lastX;
    private lastButton;
    private maxPrice;
    private timer;
    constructor(hostRef: ElementRef, renderer: Renderer2);
    ngAfterViewInit(): void;
    ngOnChanges(changes: SimpleChanges): void;
    onNgModelChange(data: TiButtonItem): void;
    ngOnDestroy(): void;
    private changeDraw;
    private initCanvas;
    private color2rgba;
    private draw;
    private getCurrentHeight;
    private record;
    private drawText;
    private drawLine;
    private drawRect;
}
