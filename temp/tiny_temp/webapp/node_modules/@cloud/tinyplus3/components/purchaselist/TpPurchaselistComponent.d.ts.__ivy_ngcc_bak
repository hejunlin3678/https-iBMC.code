import { EventEmitter } from '@angular/core';
import { TiBaseComponent } from '@cloud/tiny3';
import { TpDiscoutsConfig } from '../discounts/TpDiscountsModule';
export interface TpHelpOptions {
    /**
     * 提示说明文本
     */
    iconTip: string;
    /**
     * 提示框最大宽度
     */
    iconTipMaxWidth?: string;
    /**
     * 提示语方向
     */
    iconTipPosition?: string;
}
/**
 * 购买清单组件
 * <example-url>../tinyplus3demo/#/purchaselist/purchaselist-all</example-url>
 */
export declare class TpPurchaselistComponent extends TiBaseComponent {
    /**
     * 购物清单名称
     */
    purchaseTitle: string;
    /**
     * 是否存在一键清空功能
     */
    enableClear: boolean;
    /**
     * 费用总金额
     */
    totalPrice: number;
    /**
     * 优惠金额
     */
    discountPrice: number;
    /**
     * 货币精度设置接口
     * 自定义保留位数，例如：1.2-4，表示整数部分最少保留1位，小数部分最小保留2位，小数部分最大保留4位。
     * 默认值取自各局点
     */
    numFormat: string;
    /**
     * 优惠详情配置接口。参考discounts组件
     */
    purchaseDiscoutsConfig: TpDiscoutsConfig;
    /**
     * @ignore
     * 清单是否没有商品
     */
    hasNodata: boolean;
    /**
     * tip配置
     */
    helpOptions: TpHelpOptions;
    /**
     * 底部协议部分
     */
    footerProtocol: string;
    /**
     * 底部温馨提示语部分
     */
    footerPrompt: string;
    /**
     * 订单确认按钮文本
     */
    buttonText: string;
    /**
     * 用户可根据实际场景决定确认按钮是否禁用（比如未实名认证等）
     *
     * 10.1.1新增接口
     */
    buttonDisabled: boolean;
    /**
     * 采购产品数量统计
     */
    total: number;
    /**
     * 订单确认按钮点击事件
     */
    readonly confirm: EventEmitter<any>;
    /**
     * 头部一键清空按钮点击事件
     */
    readonly clear: EventEmitter<any>;
    /**
     * 可选优惠项切换选择项时触发
     *
     * 10.1.2 新增接口
     */
    readonly discountChange: EventEmitter<any>;
    /**
     * @ignore
     */
    emptyText: string;
    /**
     * @ignore
     * 协议是否勾选
     */
    checked: boolean;
    /**
     * @ignore
     */
    discountsChange($event: any): void;
    onCheckboxNgModelChange(model: boolean): void;
    /**
     * @ignore
     * 确认按钮点击触发
     */
    clickFn(): void;
    /**
     * @ignore
     * 一键清空
     */
    clearFn(): void;
}
