import { EventEmitter } from '@angular/core';
import { TiBaseComponent, TiPositionType } from '@cloud/tiny3';
export interface TpResourceItem {
    /**
     * 设置资源内容；
     */
    name: string;
    /**
     * 设置资源总数。
     */
    total?: number;
    /**
     * 设置资源异常数；
     */
    error?: number;
    /**
     * 设置资源异常数最大值；
     * @default 99
     */
    errorMax?: number;
    /**
     * 设置资源名称的提示信息，文本溢出时，鼠标悬停会显示提示信息
     *
     * content：默认文本为name属性内容；
     *
     * position：默认显示位置：'top'；
     */
    nameTip?: TpResourceTip;
    /**
     * 设置资源总数的提示信息：
     *
     * content：默认无提示信息；
     *
     * position：默认显示位置 'bottom-left'；
     */
    totalTip?: TpResourceTip;
    /**
     * 设置资源异常数的提示信息:
     *
     * content：默认无提示信息；
     *
     * position：默认显示位置 'bottom-left'；
     */
    errorTip?: TpResourceTip;
    /**
     * 设置资源项是否隐藏;
     * @default false
     */
    hide?: boolean;
    /**
     * 允许有多余的属性字段
     */
    [propName: string]: any;
}
export interface TpResourceTip {
    /**
     * 提示信息内容
     */
    content?: string;
    /**
     * 提示信息显示位置，有以下值可选，其中auto代表自适应位置显示；
     *
     * "top" | "top-left" | "top-right" | "bottom" | "bottom-left" | "bottom-right" | "left" | "left-top" | "left-bottom" | "right" | "right-top" | "right-bottom" | "center" | "auto" | "none"
     */
    position?: TiPositionType;
}
/**
 * @ignore
 */
export declare class TpResourceItemComponent extends TiBaseComponent {
    /**
     * 每项资源配置对象内容
     */
    item: TpResourceItem;
    /**
     * 选中某项资源异常数时，触发事件
     */
    readonly errorSelect: EventEmitter<TpResourceItem>;
    /**
     * @ignore
     * 获取显示异常资源数
     */
    getErrorNumber(error: number, errorMax: number): any;
    /**
     * @ignore
     */
    onClickError(item: TpResourceItem, event: Event): void;
}
