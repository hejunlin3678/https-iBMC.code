import { ElementRef, Renderer2, TemplateRef } from '@angular/core';
import { TpSelectgroupComponent } from './TpSelectgroupComponent';
import { TiBaseComponent } from '@cloud/tiny3';
export interface TpSelectgroupItem {
    /**
     * 卡片标题
     */
    title: string;
    /**
     * 卡片内容
     */
    content?: string;
    /**
     * 卡片是否禁用
     */
    disabled?: boolean;
    /**
     * 卡片左侧图标名
     */
    iconName: string;
    /**
     * 允许有多余的属性字段
     */
    [propName: string]: any;
}
/**
 * 配合[TpSelectgroupComponent]{@link ../components/TpSelectgroupComponent.html}使用
 *
 * <example-url>../tinyplus3demo/#/selectgroup/selectgroup-all</example-url>
 */
export declare class TpSelectitemComponent extends TiBaseComponent {
    protected hostRef: ElementRef;
    protected renderer: Renderer2;
    /**
     * 数据配置
     */
    item: TpSelectgroupItem;
    /**
     * 选中标识位置
     */
    checkPosition: 'right-top' | 'right-bottom';
    itemTemplate: TemplateRef<any>;
    /**
     * @ignore
     */
    selectgroup: any;
    constructor(selectgroup: TpSelectgroupComponent, hostRef: ElementRef, renderer: Renderer2);
    /**
     * @ignore
     */
    onClick(): void;
    /**
     * @ignore
     * 是否选中（多选时）
     */
    isChecked(): boolean;
}
